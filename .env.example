# ========================================
# Credit Application Platform
# Environment Configuration Template
# ========================================

# Database Configuration
POSTGRES_DB=credit_app
POSTGRES_USER=creditapp
POSTGRES_PASSWORD=creditapp_dev_password

# Redis Configuration
REDIS_PASSWORD=creditapp_redis_password

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=local

# Database Connection
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/credit_app
SPRING_DATASOURCE_USERNAME=creditapp
SPRING_DATASOURCE_PASSWORD=creditapp_dev_password

# HikariCP Connection Pool
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=30000
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=600000

# Redis Connection
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=creditapp_redis_password

# JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Flyway
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# Server
SERVER_PORT=8080
SERVER_COMPRESSION_ENABLED=true

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CREDITAPP=DEBUG

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION=3600000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# File Upload
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# ========================================
# Frontend Configuration (when implemented)
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NODE_ENV=development

# ========================================
# Production Override Examples
# ========================================
# For production, override these values:
# - JWT_SECRET: Use a strong random secret (32+ characters)
# - POSTGRES_PASSWORD: Use a strong password
# - REDIS_PASSWORD: Use a strong password
# - SPRING_PROFILES_ACTIVE=prod
# - LOGGING_LEVEL_ROOT=WARN
# - LOGGING_LEVEL_COM_CREDITAPP=INFO
